@using Mvc_Cv_Project.Models.Entity
@model List<TblAdmin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


    <h2>Admin Paneli</h2>

    <div class="col-md-12">
        <div class="card card-plain">

            <div class="content table-responsive table-full-width">
                <table class="table table-hover">
                    <thead>
                    <th>ID</th>
                    <th>Kullanıcı Adı</th>
                    <th>Düzenle</th>
                    <th>Sil</th>


                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.ID</td>
                                <td>@item.KullaniciAdi</td>

                                <td><a href="/Admin/AdminGetir/@item.ID" class="btn btn-success">Düzenle🖊️</a></td>
                                <td><a href="/Admin/AdminSil/@item.ID" class="btn btn-danger">Sil🗑️</a></td>


                            </tr>
                        }
                    </tbody>


                </table>

            </div>
        </div>
    </div>
    <a href="/Admin/AdminEkle/" class="btn btn-primary">Yeni Admin Ekle <i class="nc-icon nc-tap-01"></i></a>



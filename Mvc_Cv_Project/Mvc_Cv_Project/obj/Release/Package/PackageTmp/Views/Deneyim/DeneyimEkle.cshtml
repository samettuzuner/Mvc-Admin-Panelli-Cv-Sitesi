
@{
    ViewBag.Title = "DeneyimEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h3>Yeni Deneyim Ekleme Sayfası</h3>
<br />
<form method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label>Başlık</label>
                <input type="text" class="form-control" placeholder="Başlık Giriniz" name="Baslik">
            </div>
        </div>
        <br />
        <div class="col-md-12">
            <div class="form-group">
                <label>Açıklama</label>
                <input type="text" class="form-control" placeholder="Açıklama Giriniz" name="Aciklama">
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label>Resim URL</label>
                <input type="text" class="form-control" placeholder="Resim URL Adresi Giriniz" name="ResimLink">
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label>Proje URL</label>
                <input type="text" class="form-control" placeholder="Proje URL Adresi Giriniz" name="ProjeLink">
            </div>
        </div>
    </div>
    <br />
    <button class="btn btn-success">Kaydet</button>
</form>
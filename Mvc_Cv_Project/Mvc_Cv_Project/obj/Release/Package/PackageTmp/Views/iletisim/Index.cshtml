@using Mvc_Cv_Project.Models.Entity
@model List<Tbliletisim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">

            </div>
            <div class="col-md-12">
                <div class="card card-plain table-plain-bg">
                    <div class="card-header ">
                        <h4 class="card-title">Gelen Kutusu📩</h4>
                        <br />
                    </div>
                    <div class="card-body table-full-width table-responsive">
                        <table class="table table-hover">
                            <thead>
                            <th>Tarih</th>
                            <th>Ad Soyad</th>
                            <th>Konu</th>
                            <th>Mesaj</th>
                            <th>Sil</th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {


                                    <tr>
                                        <td>@item.Tarih</td>
                                        <td> @item.AdSoyad</td>
                                        <td>@item.Konu</td>
                                        <td>@item.Mesaj</td>
                                        <td><a href="/iletisim/iletisimSil/@item.ID" class="btn btn-danger">Sil 🗑️ </a></td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

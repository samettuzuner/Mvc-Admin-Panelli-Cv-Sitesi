                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" name="Konu" placeholder="Konu">
                                    <label for="subject">Konu</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Mesajınızı Buraya Yazınız" name="Mesaj" style="height: 100px"></textarea>
                                    <label for="message">Mesajınızı Buraya Yazınız</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary py-3 px-5" type="submit">Mesaj Gönder <i class="fas fa-paper-plane"></i></button>




                            </div>
